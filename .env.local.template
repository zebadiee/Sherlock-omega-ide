# Sherlock Î© IDE - Enterprise OAuth Configuration Template
# Copy this file to .env.local and fill in your actual credentials

# ============================================================================
# CORE APPLICATION SETTINGS
# ============================================================================
NEXT_PUBLIC_SITE_URL=http://localhost:3002
NODE_ENV=development
PORT=3002

# For LAN development (replace with your actual IP)
# NEXT_PUBLIC_SITE_URL=http://192.168.1.100:3002

# ============================================================================
# GITHUB OAUTH INTEGRATION
# ============================================================================
# Create a GitHub OAuth App at: https://github.com/settings/applications/new
# Authorization callback URL: http://localhost:3002/api/auth/callback/github
# Homepage URL: http://localhost:3002

GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_ACCESS_TOKEN=your_github_personal_access_token_here

# GitHub App settings (for advanced automation)
GITHUB_APP_ID=your_github_app_id_here
GITHUB_INSTALLATION_ID=your_github_installation_id_here
GITHUB_PRIVATE_KEY_PATH=./secrets/github-app-private-key.pem

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# Create a Supabase project at: https://app.supabase.com
# Add callback URL: http://localhost:3002/api/auth/callback/supabase

NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# Database connection (for direct access)
SUPABASE_DB_URL=postgresql://postgres:your_password@db.your_project_id.supabase.co:5432/postgres

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
NEXTAUTH_URL=http://localhost:3002
NEXTAUTH_SECRET=your_nextauth_secret_here

# JWT signing keys (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ============================================================================
# AI & QUANTUM SERVICES
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Quantum computing services
IBM_QUANTUM_TOKEN=your_ibm_quantum_token_here
QUANTUM_CLOUD_ENDPOINT=https://quantum.example.com/api

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================
# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org_here
SENTRY_PROJECT=sherlock-omega-ide

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# ============================================================================
# DEVELOPMENT & DEBUGGING
# ============================================================================
DEBUG=sherlock:*
LOG_LEVEL=debug
ENABLE_PROFILING=true

# Feature flags
FEATURE_QUANTUM_COMPUTING=true
FEATURE_AI_ASSISTANCE=true
FEATURE_COLLABORATION=true
FEATURE_TELEMETRY=false

# ============================================================================
# INFRASTRUCTURE & DEPLOYMENT
# ============================================================================
# Docker and container settings
DOCKER_REGISTRY=ghcr.io/your-username
CONTAINER_NAME=sherlock-omega-ide

# MongoDB (for development)
MONGODB_URI=mongodb://localhost:27017/sherlock-omega-ide
MONGODB_DB_NAME=sherlock_omega_ide

# Redis cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# ============================================================================
# WEBHOOK ENDPOINTS
# ============================================================================
# GitHub webhooks
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here
GITHUB_WEBHOOK_URL=http://localhost:3002/api/webhooks/github

# Supabase webhooks
SUPABASE_WEBHOOK_SECRET=your_supabase_webhook_secret_here
SUPABASE_WEBHOOK_URL=http://localhost:3002/api/webhooks/supabase

# ============================================================================
# CORS & SECURITY HEADERS
# ============================================================================
ALLOWED_ORIGINS=http://localhost:3002,http://127.0.0.1:3002,http://192.168.1.100:3002
CSP_REPORT_URI=/api/security/csp-report

# ============================================================================
# BACKUP & STORAGE
# ============================================================================
# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=sherlock-omega-ide-storage

# CloudFlare (for CDN)
CLOUDFLARE_API_TOKEN=your_cloudflare_token_here
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here

# ============================================================================
# SETUP VALIDATION
# ============================================================================
# Set to 'true' after completing OAuth setup
OAUTH_SETUP_COMPLETE=false
GITHUB_INTEGRATION_COMPLETE=false
SUPABASE_INTEGRATION_COMPLETE=false