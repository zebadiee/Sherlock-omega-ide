{
  "name": "sherlock-omega-ide",
  "version": "1.0.0",
  "description": "Revolutionary Self-Healing Development Environment - Computational Consciousness IDE",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "demo": "EVOLUTION_MODE=manual ts-node src/web/demo-server.ts",
    "demo:build": "npm run build && EVOLUTION_MODE=manual node dist/web/demo-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:integration": "jest --testPathPattern=integration",
    "test:formal-verification": "jest --testPathPattern=verification",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "ide",
    "self-healing",
    "computational-consciousness",
    "formal-verification",
    "github-integration"
  ],
  "author": "Sherlock Î© Contributors",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^5.0.3",
    "express": "^5.1.0",
    "monaco-editor": "^0.52.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^18.17.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
