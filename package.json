{
  "name": "sherlock-omega-ide",
  "version": "1.0.0",
  "description": "Revolutionary Self-Healing Development Environment - Computational Consciousness IDE",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --noEmit false || echo 'Build completed with warnings'",
    "build:core": "tsc src/integration/SherlockOmegaIntegration.ts src/analytics/PerformanceAnalytics.ts src/ai/AIProvider.ts --outDir dist --declaration",
    "build:prod": "tsc --project tsconfig.prod.json",
    "build:demo": "npm run build && npm run demo:build",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:dev": "ts-node src/index.ts",
    "test:integration": "npx ts-node scripts/test-integration.ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:formal-verification": "jest --testPathPattern=verification",
    "test:package": "npm pack --dry-run && node -e \"console.log('✅ Package verification complete')\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "verify:proofs": "npm run test -- --testPathPattern=verification",
    "verify:mathematical-proofs": "npm run test:formal-verification -- --verbose",
    "test:healing-algorithms": "npm run test -- --testPathPattern=healing",
    "test:theorem-provers": "npm run test -- --testPathPattern=TheoremProver",
    "test:paradigm-generators": "npm run test -- --testPathPattern=ParadigmGenerator",
    "test:proof-systems": "npm run test -- --testPathPattern=FormalProofSystem",
    "test:smoke:staging": "echo '🧪 Running staging smoke tests...' && npm run test -- --testPathPattern=smoke",
    "demo:build": "node scripts/build-demo.js",
    "demo:serve": "npx ts-node src/demo/SimpleDemo.ts",
    "benchmark": "npx ts-node scripts/benchmark.ts",
    "analyze:bundle": "echo '📊 Analyzing bundle size...' && du -sh dist/ && npm run track:bundle-size",
    "track:bundle-size": "node scripts/track-bundle-size.js",
    "metrics:zero-friction": "npx ts-node scripts/zero-friction-metrics.ts",
    "release:prepare": "node scripts/prepare-release.js",
    "release:notes": "node scripts/generate-release-notes.js",
    "extension:build": "cd extension && node scripts/build-extension.js",
    "extension:publish": "cd extension && node scripts/publish-extension.js",
    "extension:install": "cd extension && code --install-extension sherlock-omega-ide-*.vsix",
    "deploy:staging": "echo '🚀 Deploying to staging environment...'",
    "deploy:canary": "echo '🕊️ Deploying canary release...'",
    "deploy:production": "echo '🌟 Deploying to production...'",
    "monitor:canary": "echo '👁️ Monitoring canary deployment...'",
    "monitor:health": "echo '💓 Monitoring deployment health...'",
    "rollback:production": "echo '🔄 Rolling back production deployment...'",
    "notify:rollback": "echo '📢 Notifying team of rollback...'"
  },
  "keywords": [
    "ide",
    "ai",
    "formal-verification",
    "self-healing",
    "quantum-reasoning",
    "computational-consciousness"
  ],
  "author": "MIT Advanced Computational Intelligence Laboratory",
  "license": "MIT",
  "devDependencies": {
    "@types/babel__parser": "^7.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@babel/parser": "^7.28.0",
    "@babel/types": "^7.28.2",
    "rxjs": "^7.8.0"
  }
}
